<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.lv10.GradController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Naziv: "  />
      <Label text="Broj stanovnika: " GridPane.rowIndex="1"  />
      <Label text="Drzava: " GridPane.rowIndex="2"  />
      <TextField GridPane.columnIndex="1" fx:id="fieldNaziv"/>
      <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="fieldBrojStanovnika"/>
      <ChoiceBox prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="choiceDrzava"/>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <buttons>
          <Button mnemonicParsing="false" text="Ok" fx:id="btnOk" onAction="#prihvatiUnos" />
            <Button mnemonicParsing="false" text="Cancel" fx:id="btnCancel" onAction="#cancelUnos" />
        </buttons>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
